{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 1am and before 2am"],
    automerge: true,
    automergeType: "pr",
    ignoreTests: false,
  },
  packageRules: [
    {
      matchUpdateTypes: ["minor", "patch"],
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
    {
      matchPackageNames: ["rand_core"],
      matchCurrentVersion: "0.6.4",
      enabled: false,
      description: "Pin rand_core to 0.6.x for rsa compatibility",
    },
  ],
}
